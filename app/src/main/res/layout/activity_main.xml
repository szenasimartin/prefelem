<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:showDividers="middle"
    android:divider="?android:attr/listDivider">


    <com.github.szenasimartin.prefelem.PreferenceElement
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        custom:shared_preference_id="one"
        custom:descText="Description"
        custom:iconColor="#0421d7"
        custom:iconSrc="@drawable/ic_facebook_box_white_48dp"
        custom:titleText="One"/>

    <com.github.szenasimartin.prefelem.PreferenceElement
        android:id="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        custom:shared_preference_id="two"
        custom:descText="Description"
        custom:titleText="Two"/>

    <com.github.szenasimartin.prefelem.PreferenceElement
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        custom:shared_preference_id="edittext"
        custom:mod="edit_text"
        custom:descText="Description"
        custom:titleText="edittext"/>

    <com.github.szenasimartin.prefelem.PreferenceElement
        android:id="@+id/three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        custom:shared_preference_id="three"
        custom:descText="Description"
        custom:titleText="Three"
        custom:mod="switch_compat"/>

</LinearLayout>
